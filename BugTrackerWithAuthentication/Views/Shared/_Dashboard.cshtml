<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Dashboard | @ViewBag.Title</title>
	@Scripts.Render("~/bundles/modernizr")
	@RenderSection("Styles", required: false)
	<link rel="stylesheet" href="@Url.Content("~/Content/_dashboard.css")" />
</head>

<body>
	<div class="wrapper">
		<div class="sidebar">
			<h1 id="sidebar">Sidebar</h1>
			<ul>
				<li>Dashboard</li>
				<li>@Html.ActionLink("Issues", "ViewIssues", "Dashboard")</li>
				<li>Settings</li>
			</ul>
		</div>
		<h2>@ViewBag.Title</h2>
	</div>
	<br />
	<div class="main-content">
		@RenderBody()
	</div>
</body>
</html>
