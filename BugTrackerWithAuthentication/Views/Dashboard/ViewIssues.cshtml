@model IEnumerable<BugTrackerWithAuthentication.Models.IssueModel>

@{
	ViewBag.Title = "View Issues";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@section Styles {
	<link href="@Url.Content("~/Content/view-issues.css")" rel="stylesheet" />
}



<div class="page">
	<h2>View all issues</h2>
	<p>
		@Html.ActionLink(" + Create new issue", "CreateIssue")
	</p>
	<table class="table">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ProjectName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IssueType)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Summary)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Priority)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Environment)
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ProjectName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IssueType)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Summary)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Priority)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Environment)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })
				</td>
			</tr>
		}

	</table>
</div>
